{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators":true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
    
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
